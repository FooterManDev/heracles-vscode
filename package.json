{
  "name": "heracles-support",
  "displayName": "Heracles Support",
  "description": "Provides Intellisense for Heracles Quest JSON.",
  "version": "1.0.0",
  "author": {
    "name": "FooterMan",
    "url": "https://github.com/FooterManDev"
  },
  "repository": {
    "url": "https://github.com/FooterManDev/heracles-vscode"
  },
  "icon": "./icon.png",
  "publisher": "FooterMan",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": ["**/heracles/quests/*.json"],
        "url": "./schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
